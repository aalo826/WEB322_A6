<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Project - <%= project.title %></title>
    <link href="/css/main.css" rel="stylesheet">
  </head>

  <body>
    <!-- Navbar -->
    <%- include('partials/navbar', { page: '' }) %>

    <!-- Hero Section -->
    <section class="hero bg-green-600 text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-4">Edit Project</h1>
        <p class="mb-6">Modify the details of the project below.</p>
      </div>
    </section>

    <!-- Edit Project Form -->
    <section class="form-section py-12">
      <div class="container mx-auto px-4 max-w-2xl">
        <form action="/solutions/editProject" method="POST" class="bg-white p-6 shadow-md rounded">
          <!-- Hidden field for project id -->
          <input type="hidden" name="id" value="<%= project.id %>">

          <div class="mb-4">
            <label for="title" class="block text-gray-700">Title</label>
            <input type="text" id="title" name="title" class="w-full p-2 border rounded" value="<%= project.title %>" required>
          </div>

          <div class="mb-4">
            <label for="feature_img_url" class="block text-gray-700">Feature Image URL</label>
            <input type="url" id="feature_img_url" name="feature_img_url" class="w-full p-2 border rounded" value="<%= project.feature_img_url %>" required>
          </div>

          <div class="mb-4">
            <label for="sector_id" class="block text-gray-700">Sector</label>
            <select id="sector_id" name="sector_id" class="w-full p-2 border rounded" required>
              <% sectors.forEach(sector => { %>
                <option value="<%= sector.id %>" <%= (project.sector_id == sector.id) ? "selected" : "" %> >
                  <%= sector.sector_name %>
                </option>
              <% }) %>
            </select>
          </div>

          <div class="mb-4">
            <label for="intro_short" class="block text-gray-700">Introduction</label>
            <textarea id="intro_short" name="intro_short" class="w-full p-2 border rounded" rows="10" required><%= project.intro_short %></textarea>
          </div>

          <div class="mb-4">
            <label for="summary_short" class="block text-gray-700">Summary</label>
            <textarea id="summary_short" name="summary_short" class="w-full p-2 border rounded" rows="5" required><%= project.summary_short %></textarea>
          </div>

          <div class="mb-4">
            <label for="impact" class="block text-gray-700">Impact</label>
            <textarea id="impact" name="impact" class="w-full p-2 border rounded" rows="10"  required><%= project.impact %></textarea>
          </div>

          <div class="mb-4">
            <label for="original_source_url" class="block text-gray-700">Original Source URL</label>
            <input type="url" id="original_source_url" name="original_source_url" class="w-full p-2 border rounded" value="<%= project.original_source_url %>" required>
          </div>

          <div class="text-center">
            <button type="submit" class="btn btn-success text-white py-2 px-4 rounded bg-green-500 hover:bg-green-600">Update Project</button>

        <!-- Delete Button -->
        <p class="pt-7">
          <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-error text-white py-2 px-4 rounded bg-red-500 hover:bg-red-600">
            Delete Project
          </a>
        </p>

        <!-- Back Button -->
        <p class="pt-7">
          <a href="/solutions/projects" class="btn">
            Back to Projects
          </a>


          </div>
        </form>
      </div>
    </section>
  </body>
</html>
