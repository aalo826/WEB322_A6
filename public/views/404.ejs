<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>404 - Not Found</title>
    <link href="/css/main.css" rel="stylesheet">
  </head>

  <body>
    <!-- Navbar -->
    <%- include('partials/navbar', { page: '/404' }) %>
    <!-- Hero Section -->
    <section class="hero bg-green-600 text-white py-12">
      <div class="container mx-auto px-4">
        <div class="flex flex-col items-center justify-center">
          <div class="text-center mb-6">
            <h1 class="text-5xl font-bold mb-4">404</h1>
            <p class="mb-6"><%= message %></p>
            <div class="text-center">
              <p>Aaron Lo - 111918429</p>
            </div>
            <!-- Timestamp -->
            <div class="text-center">
              <p id="timestamp"></p>
            </div>

          </div>
        </div>
      </div>
    </section>

    <script>
      // Update timestamp
      document.addEventListener("DOMContentLoaded", function() {
        const currentDate = new Date().toLocaleDateString();  // Date
        const currentTime = new Date().toLocaleTimeString();  // Time
        const dateTimeString = `Date: ${currentDate}, Time: ${currentTime}`;

        document.getElementById("timestamp").innerText = dateTimeString;
      });
    </script>
  </body>
</html>
