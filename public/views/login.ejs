<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Login - Climate Solutions</title>
    <link href="/css/main.css" rel="stylesheet">
  </head>
  <body class="bg-gray-100">
    <!-- Navbar -->
    <%- include('partials/navbar', { page: '/login' }) %>

    <!-- Login Section -->
    <section class="hero bg-green-600 text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-4">Login</h1>
        <p class="text-lg">Access your account to manage climate solution projects</p>
      </div>
    </section>

    <section class="py-12">
      <div class="container mx-auto px-4 max-w-md bg-white shadow-md rounded-lg p-6">
        <form method="POST" action="/login" class="space-y-4">
          <input type="text" name="userName" placeholder="User Name" required class="input input-bordered w-full"/>
          <input type="password" name="password" placeholder="Password" required class="input input-bordered w-full"/>
          <button type="submit" class="btn btn-primary w-full">Login</button>
        </form>

        <% if (errorMessage) { %>
          <div class="alert alert-error mt-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span><%= errorMessage %></span>
          </div>
        <% } %>
      </div>
    </section>
  </body>
</html>
