<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Project</title>
    <link href="/css/main.css" rel="stylesheet">
  </head>

  <body>
    <!-- Navbar -->
    <%- include('partials/navbar', { page: '/solutions/addProject' }) %>

    <!-- Hero Section -->
    <section class="hero bg-green-600 text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-4">Add Project</h1>
        <p class="mb-6">Fill out the form below to add a new project.</p>
      </div>
    </section>

    <!-- Add Project Form -->
    <section class="form-section py-12">
      <div class="container mx-auto px-4 max-w-2xl">
        <form action="/solutions/addProject" method="POST" class="bg-white p-6 shadow-md rounded">
          <div class="mb-4">
            <label for="title" class="block text-gray-700">Title</label>
            <input type="text" id="title" name="title" class="w-full p-2 border rounded" required>
          </div>

          <div class="mb-4">
            <label for="feature_img_url" class="block text-gray-700">Feature Image URL</label>
            <input type="url" id="feature_img_url" name="feature_img_url" class="w-full p-2 border rounded" required>
          </div>

          <div class="mb-4">
            <label for="sector_id" class="block text-gray-700">Sector</label>
            <select id="sector_id" name="sector_id" class="w-full p-2 border rounded" required>
              <% sectors.forEach(sector => { %>
                <option value="<%= sector.id %>"><%= sector.sector_name %></option>
              <% }) %>
            </select>
          </div>

          <div class="mb-4">
            <label for="intro_short" class="block text-gray-700">Introduction</label>
            <textarea id="intro_short" name="intro_short" class="w-full p-2 border rounded" required></textarea>
          </div>

          <div class="mb-4">
            <label for="summary_short" class="block text-gray-700">Summary</label>
            <textarea id="summary_short" name="summary_short" class="w-full p-2 border rounded" required></textarea>
          </div>

          <div class="mb-4">
            <label for="impact" class="block text-gray-700">Impact</label>
            <textarea id="impact" name="impact" class="w-full p-2 border rounded" required></textarea>
          </div>

          <div class="mb-4">
            <label for="original_source_url" class="block text-gray-700">Original Source URL</label>
            <input type="url" id="original_source_url" name="original_source_url" class="w-full p-2 border rounded" required>
          </div>

          <div class="text-center">
            <button type="submit" class="btn btn-success text-white py-2 px-4 rounded bg-green-500 hover:bg-green-600">Submit</button>
          </div>
        </form>
      </div>
    </section>
  </body>
</html>
